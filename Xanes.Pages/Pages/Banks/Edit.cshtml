@page
@model Xanes.Pages.Pages.Banks.EditModel

<form method="post">
    <input hidden asp-for="Bank.Id" />
    <input hidden asp-for="Bank.CompanyId" />

    <div class="border pb-3 px-3 mt-2">
        <div class="row pb-1">
            <h3 class="text-primary">Edit Bank</h3>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-1 p-1">
            <label asp-for="Bank.Code" class="ps-0"></label>
            <input asp-for="Bank.Code" type="text" class="form-control px-2 py-1" />
            <span asp-validation-for="Bank.Code" class="text-danger"></span>
        </div>
        <div class="row mb-1 p-1">
            <label asp-for="Bank.Name" class="ps-0"></label>
            <input asp-for="Bank.Name" type="text" class="form-control px-2 py-1" />
            <span asp-validation-for="Bank.Name" class="text-danger"></span>
        </div>
        <div class="row mb-1 p-1">
            <label asp-for="Bank.BankingCommissionPercentage" class="ps-0"></label>
            <input asp-for="Bank.BankingCommissionPercentage" type="text" class="form-control px-2 py-1" />
            <span asp-validation-for="Bank.BankingCommissionPercentage" class="text-danger"></span>
        </div>
        <div class="row mb-1 p-1">
            <label asp-for="Bank.IsCompany" class="ps-0"></label>
            <input asp-for="Bank.IsCompany" type="text" class="form-control px-2 py-1" />
            <span asp-validation-for="Bank.IsCompany" class="text-danger"></span>
        </div>
        <div class="row mb-1 p-1">
            <label asp-for="Bank.OrderPriority" class="ps-0"></label>
            <input asp-for="Bank.OrderPriority" type="text" class="form-control px-2 py-1" />
            <span asp-validation-for="Bank.OrderPriority" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="Bank.BankAccountExcludeUId" class="ps-0"></label>
            <input asp-for="Bank.BankAccountExcludeUId" type="text" class="form-control px-2 py-1" />
            <span asp-validation-for="Bank.BankAccountExcludeUId" class="text-danger"></span>
        </div>

        <div class="row mb-1 p-1">
            <label asp-for="Bank.LogoBank" class="ps-0"></label>
            <input asp-for="Bank.LogoBank" type="text" class="form-control px-2 py-1" />
            <span asp-validation-for="Bank.LogoBank" class="text-danger"></span>
        </div>
        <div class="row p-1">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/banks/index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
