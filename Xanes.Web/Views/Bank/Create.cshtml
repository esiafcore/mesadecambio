@model Bank

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb2">
            <h2 class="text-primary">Create Bank</h2>
            <hr />
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Code" class="p-0"></label>
            <input asp-for="Code" type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="BankingCommissionPercentage" class="p-0"></label>
            <input asp-for="BankingCommissionPercentage" type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="IsCompany" class="p-0"></label>
            <input asp-for="IsCompany" type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="OrderPriority" class="p-0"></label>
            <input asp-for="OrderPriority" type="text" class="form-control" />
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="BankAccountExcludeUId" class="p-0"></label>
            <input asp-for="BankAccountExcludeUId" type="text" class="form-control" />
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="LogoBank" class="p-0"></label>
            <input asp-for="LogoBank" type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Bank" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>