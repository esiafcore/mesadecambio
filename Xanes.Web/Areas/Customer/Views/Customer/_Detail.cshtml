@model Customer

<div class="row">
    <input hidden asp-for="Id" />
    <input hidden asp-for="CompanyId" />
    <div class="form-floating pb-1 pt-2 col-md-6">
        <input asp-for="TypeTrx.Name" type="text" readonly="readonly" class="form-control border-0 shadow" />
        <label asp-for="TypeTrx.Name" class="ms-2">Tipo Persona</label>
    </div>
 @*    <div class="form-floating pb-1 pt-2 col-md-6">
        <input asp-for="CategoryTrx.Name" type="text" readonly="readonly" class="form-control border-0 shadow" />
        <label asp-for="CategoryTrx.Name" class="ms-2">Categoría Cliente</label>
    </div> *@

    <div class="form-floating pb-1 pt-2 col-md-6">
        <input asp-for="SectorTrx.Name" type="text" readonly="readonly" class="form-control border-0 shadow" />
        <label asp-for="SectorTrx.Name" class="ms-2">Sector Cliente</label>
    </div>

    <div class="form-floating pb-1 pt-2 col-md-6">
        <input asp-for="Code" type="text" readonly="readonly" class="form-control border-0 shadow" />
        <label asp-for="Code" class="ms-2"></label>
    </div>
    <div class="form-floating pb-1 pt-2 col-md-6">
        <input asp-for="Identificationnumber" type="text" readonly="readonly" class="form-control border-0 shadow" />
        <label asp-for="Identificationnumber" class="ms-2"></label>
    </div>
    <div class="form-floating pb-1 pt-2 col-md-12">
        <input asp-for="BusinessName" type="text" readonly="readonly" class="form-control border-0 shadow" />
        @if (Model.TypeTrx.Numeral == (int)SD.PersonType.NaturalPerson)
        {
            <label asp-for="BusinessName" class="ms-2">Nombre Completo</label>
        }
        else{
            <label asp-for="BusinessName" class="ms-2">Razón Social</label>
        }
    </div>
    <div class="form-floating pb-1 pt-2 col-md-12">
        <label asp-for="AddressPrimary" class="ms-2 text-muted"></label>
        <textarea asp-for="AddressPrimary" class="form-control border-0 shadow">
        </textarea>
    </div>

    <div class="form-floating pb-1 pt-2 col-md-6">
        <div class="form-check mt-3 align-items-center">
            <input type="checkbox" readonly="readonly" disabled class="form-check-input" asp-for="IsBank" />
            <label asp-for="IsBank" class="ms-2">
                @Html.DisplayNameFor(m => m.IsBank)
            </label>
        </div>
    </div>
    <div class="form-floating pb-1 pt-2 col-md-6">
        <div class="form-check mt-3 align-items-center">
            <input type="checkbox" readonly="readonly" disabled class="form-check-input" asp-for="IsActive" />
            <label asp-for="IsActive" class="ms-2">
                @Html.DisplayNameFor(m => m.IsActive)
            </label>
        </div>
    </div>
    <div class="form-floating pb-1 pt-2 col-md-6">
        <div class="form-check mt-3 align-items-center">
            <input type="checkbox" readonly="readonly" disabled class="form-check-input" asp-for="IsSystemRow" />
            <label asp-for="IsSystemRow" class="ms-2">
                @Html.DisplayNameFor(m => m.IsSystemRow)
            </label>
        </div>
    </div>
</div>
