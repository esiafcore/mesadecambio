@model CustomerCategory

<div class="row">
    <input hidden asp-for="Id" />
    <input hidden asp-for="CompanyId" />
    <div class="form-floating pb-1 pt-2 col-md-6">
        <input asp-for="Numeral" type="number" readonly="readonly" class="form-control border-0 shadow text-end" />
        <label asp-for="Numeral" class="ms-2"></label>
    </div>
    <div class="form-floating pb-1 pt-2 col-md-6">
        <input asp-for="Code" type="text" readonly="readonly" class="form-control border-0 shadow" />
        <label asp-for="Code" class="ms-2"></label>
    </div>
    <div class="form-floating pb-1 pt-2 col-md-12">
        <input asp-for="Name" type="text" readonly="readonly" class="form-control border-0 shadow" />
        <label asp-for="Name" class="ms-2"></label>
    </div>

    <div class="form-floating pb-1 pt-2 col-md-6">
        <div class="form-check mt-3 align-items-center">
            <input type="checkbox" readonly="readonly" disabled class="form-check-input" asp-for="IsBank" />
            <label asp-for="IsBank" class="ms-2">
                @Html.DisplayNameFor(m => m.IsBank)
            </label>
        </div>
    </div>
    <div class="form-floating pb-1 pt-2 col-md-6">
        <div class="form-check mt-3 align-items-center">
            <input type="checkbox" readonly="readonly" disabled class="form-check-input" asp-for="IsActive" />
            <label asp-for="IsActive" class="ms-2">
                @Html.DisplayNameFor(m => m.IsActive)
            </label>
        </div>
    </div>
</div>