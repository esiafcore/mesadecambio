@model IdentificationType

<div class="card shadow border-0 mt-1">
    <div class="card-header bg-secondary bg-gradient ml-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-1">@(Model.Id != 0 ? "Editar" : "Crear")  Tipo Identifícación</h3>
            </div>
        </div>
    </div>
    <div class="card-body px-3 py-1">
        <div class="row pt-0">
            <div class="col-md-12">
                <form method="post" class="row">
                    <input hidden asp-for="Id" />
                    <input hidden asp-for="CompanyId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mt-1 pb-1 pt-1 col-md-6">
                        <input asp-for="Numeral" type="number" class="form-control border-0 shadow text-end" />
                        <label asp-for="Numeral" class="ms-2"></label>
                        <span asp-validation-for="Numeral" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-1 pb-1 pt-1 col-md-6">
                        <input asp-for="Code" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Code" class="ms-2"></label>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-1 pb-1 pt-1 col-md-12">
                        <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating pb-1 pt-2 col-md-12">
                        <input asp-for="RegularExpressionNumber" type="text" class="form-control border-0 shadow" />
                        <label asp-for="RegularExpressionNumber" class="ms-2"></label>
                        <span asp-validation-for="RegularExpressionNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating pb-1 pt-2 col-md-4">
                        <input asp-for="FormatExpressionNumber" type="text" class="form-control border-0 shadow" />
                        <label asp-for="FormatExpressionNumber" class="ms-2"></label>
                        <span asp-validation-for="FormatExpressionNumber" class="text-danger"></span>

                    </div>
                    <div class="form-floating pb-1 pt-2 col-md-4">
                        <input asp-for="SubstitutionExpressionNumber" type="text" class="form-control border-0 shadow" />
                        <label asp-for="SubstitutionExpressionNumber" class="ms-2"></label>
                        <span asp-validation-for="SubstitutionExpressionNumber" class="text-danger"></span>

                    </div>
                    <div class="form-floating pb-1 pt-2 col-md-4">
                        <input asp-for="IdentificationMaxLength" type="number" class="form-control border-0 shadow text-end" />
                        <label asp-for="IdentificationMaxLength" class="ms-2"></label>
                        <span asp-validation-for="IdentificationMaxLength" class="text-danger"></span>

                    </div>
                    <div class="form-floating pb-1 pt-2 col-md-6">
                        <div class="form-check mt-3 align-items-center">
                            <input type="checkbox" class="form-check-input" asp-for="IsLegal" />
                            <label asp-for="IsLegal" class="ms-2">
                                @Html.DisplayNameFor(m => m.IsLegal)
                            </label>
                        </div>
                    </div>
                    <div class="form-floating pb-1 pt-2 col-md-6">
                        <div class="form-check mt-3 align-items-center">
                            <input type="checkbox" class="form-check-input" asp-for="IsForeign" />
                            <label asp-for="IsForeign" class="ms-2">
                                @Html.DisplayNameFor(m => m.IsForeign)
                            </label>
                        </div>
                    </div>
                    <div class="form-floating pb-1 pt-2 col-md-12">
                        <div class="form-check mt-3 align-items-center">
                            <input type="checkbox" class="form-check-input" asp-for="IsActive" />
                            <label asp-for="IsActive" class="ms-2">
                                @Html.DisplayNameFor(m => m.IsActive)
                            </label>
                        </div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">
                                    <i class="bi bi-disc"></i> Actualizar
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">
                                    <i class="bi bi-disc"></i> Crear
                                </button>
                            }
                        </div>
                        <div class="col-6 col-md-3"> 
                            <a asp-controller="IdentificationType" asp-action="Index" class="btn btn-secondary border form-control">
                                <i class="bi bi-arrow-return-left"></i> Regresar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/Admin/IdentificationType/identificationTypeUpsert.js"></script>
    }
}