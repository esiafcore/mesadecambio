@model List<Bank>

<div class="card shadow border-0 mt-1">
    <div class="card-header bg-secondary bg-gradient ml-0 py-1">
        <div class="row align-items-center">
            <div class="col-8 text-center">
                <h3 class="text-white py-1">Bancos</h3>
            </div>
            <div class="col-4 text-end">
                <a asp-controller="Bank" asp-action="Upsert" class="btn btn-info">
                    <i class="bi bi-plus-circle"></i> Nuevo
                </a>
            </div>
        </div>
    </div>
    <div class="card-body px-3 py-1">
        <div class="table-responsive" id="table-wrapper">
            <table id="tblData" class="table table-hover table-bordered table-striped" style="width:100%">
                <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>% Comisión</th>
                    <th>Es Compañía</th>
                    <th>Orden</th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <script src="~/js/Admin/Bank/bankIndex.js"></script>
    }
}