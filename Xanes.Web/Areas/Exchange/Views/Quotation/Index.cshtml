@model TransactionReportVM

<div class="card shadow border-0 mt-1">
    <form method="post" id="formPrint" asp-area="Exchange" asp-controller="SystemInformation" asp-action="PrintTransaOperationList" target="_blank">
        <input asp-for="ReportType" value="@((short)SD.ReportTransaType.Operation)" name="ReportType" hidden />
        <input asp-for="DateTransaInitial" name="DateTransaInitial" type="date" id="dateInitialReport" hidden />
        <input asp-for="DateTransaFinal" name="DateTransaFinal" type="date" id="dateFinalReport" hidden />
        <div class="card-header ms-0 py-1">
            <div class="row align-items-center">
                <div class="col-4 text-start">
                    <a class="btn btn-info border" asp-controller="Quotation" asp-action="Upsert"
                       data-bs-toggle="tooltip" data-bs-trigger="hover"
                       onclick="fnredirectBtnIndex(event)" data-bs-placement="top"
                       data-bs-title="Nuevo Cotización">
                        <i class="bi bi-plus-circle"></i> Nuevo
                    </a>
                    <button class="btn btn-secondary border" type="submit"
                            data-bs-toggle="tooltip" data-bs-trigger="hover" onclick="fntoggleLoading('Generando Reporte...')"
                            data-bs-placement="top" data-bs-title="Imprimir Operaciones">
                        <i class="bi bi-printer-fill"></i> Imprimir
                    </button>
                </div>
                <div class="col-4 text-center">
                    <h3 class="text-black py-1">Transacciones</h3>
                </div>
                <div class="col-4 text-end">
                    <a class="btn btn-secondary border" id="btnClean" data-bs-toggle="tooltip"
                       data-bs-trigger="hover" onclick="fnCleanFilter()"
                       data-bs-placement="top" data-bs-title="Limpiar Filtro">
                        <i class="bi bi-eraser-fill"></i> Limpiar
                    </a>
                </div>
            </div>
        </div>
    </form>

    <div class="card-body px-3 py-1">
        <table id="tblData" class="table table-bordered responsive nowrap compact" style="width: 100%">
            <thead>
                <tr>
                    <th data-priority="2">Fecha</th>
                    <th data-priority="3"># Transa</th>
                    <th>Cliente</th>
                    <th>Mon<br />Ori-Des</th>
                    <th>T/C<br />Com</th>
                    <th>T/C<br />Vta</th>
                    <th data-priority="4">Monto</th>
                    <th>Ingreso</th>
                    <th>Costo</th>
                    <th>Eje</th>
                    <th>Cerra<br />?</th>
                    <th>Conta<br />?</th>
                    <th data-priority="1"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        let decimalTransa = @Html.Raw(@ViewBag.DecimalTransa);
        let isNewEntry = @Html.Raw(@ViewBag.IsNewEntry);
        let changeProcessingDate = @Html.Raw(@ViewBag.ChangeProcessingDate);
        let processingDate = @Html.Raw(@ViewBag.ProcessingDate);
        let decimalExchange = @Html.Raw(@ViewBag.DecimalExchange);
        let limitBatchCreditNote = @Html.Raw(@ViewBag.LimitBatchCreditNote);

    </script>
    <script src="~/js/Exchange/Quotation/quotationIndex.js"></script>
}